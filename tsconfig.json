{
  "compilerOptions": {
    "target": "es5",
    "experimentalDecorators": true,
    "strict": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "allowJs":true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include":[
    "src"
  ]
}
